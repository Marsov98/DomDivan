<Window x:Class="DomDivan.CartWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Корзина" Height="450" Width="600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <ListView ItemsSource="{Binding Items}">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Товар" DisplayMemberBinding="{Binding Variant.Product.Name}"/>
                    <GridViewColumn Header="Цвет" DisplayMemberBinding="{Binding Variant.Color.Name}"/>
                    <GridViewColumn Header="Ткань" DisplayMemberBinding="{Binding Variant.Cloth.Name}"/>
                    <GridViewColumn Header="Цена" DisplayMemberBinding="{Binding Variant.Product.DiscountPrice, StringFormat={}{0:C}}"/>
                    <GridViewColumn Header="Кол-во" DisplayMemberBinding="{Binding Quantity}"/>
                    <GridViewColumn Header="Сумма" DisplayMemberBinding="{Binding TotalPrice, StringFormat={}{0:C}}"/>
                    <GridViewColumn Header="Действия">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="Удалить" Click="RemoveItem_Click"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>

        <TextBlock Grid.Row="1" Text="{Binding Total, StringFormat='Итого: {0:C}'}" 
                   FontSize="16" FontWeight="Bold" HorizontalAlignment="Right" Margin="10"/>

        <Button Grid.Row="2" Content="Оформить заказ" Click="Checkout_Click" 
                Height="40" Margin="10" FontSize="16"/>
    </Grid>
</Window>