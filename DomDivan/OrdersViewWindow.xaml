<Window x:Class="DomDivan.OrdersViewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DomDivan"
        mc:Ignorable="d"
        Title="Заказы" 
        Height="700" 
        Width="1000"
        MinHeight="600"
        MinWidth="900"
        WindowStartupLocation="CenterScreen"
        Background="#FFF5F5F5">

    <Window.Resources>
        <local:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        
        <!-- Стиль кнопок -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#FF1A1A1A"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF333333"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Стиль статусов заказов -->
        <Style x:Key="OrderStatusStyle" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="14"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding Status}" Value="Новый">
                    <Setter Property="Foreground" Value="#FF0066CC"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Status}" Value="В обработке">
                    <Setter Property="Foreground" Value="#FFFF9900"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Status}" Value="Доставка">
                    <Setter Property="Foreground" Value="#FF339933"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Status}" Value="Отменен">
                    <Setter Property="Foreground" Value="#FFCC0000"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Status}" Value="Завершен">
                    <Setter Property="Foreground" Value="#FF006600"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <!-- Стиль для ListView -->
        <Style TargetType="ListView">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#FFE0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Disabled"/>
        </Style>

        <!-- Стиль для элементов ListView -->
        <Style TargetType="ListViewItem">
            <Setter Property="BorderBrush" Value="#FFE0E0E0"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
            <Setter Property="Padding" Value="0,5"/>
            <Setter Property="Background" Value="Transparent"/>
        </Style>

        <!-- Стиль для TextBox -->
        <Style TargetType="TextBox">
            <Setter Property="BorderBrush" Value="#FFE0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="Background" Value="White"/>
        </Style>

        <!-- Стиль для ComboBox -->
        <Style TargetType="ComboBox">
            <Setter Property="Height" Value="35"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderBrush" Value="#FFE0E0E0"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <!-- Шапка -->
            <RowDefinition Height="*"/>
            <!-- Основное содержимое -->
        </Grid.RowDefinitions>

        <!-- Шапка (Header) -->
        <Border Grid.Row="0" Background="#FF1A1A1A" Padding="20,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Логотип и название -->
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <Image Source="/Image/logo.png" Width="40" Height="40" Margin="0,0,10,0"/>
                    <TextBlock Text="Заказы" 
                             FontSize="20" 
                             FontWeight="Bold"
                             Foreground="White"
                             VerticalAlignment="Center"/>
                </StackPanel>

                <!-- Иконка уведомлений -->
                <Grid Grid.Column="1" 
                      HorizontalAlignment="Right"
                      VerticalAlignment="Center"
                      Width="40"
                      Height="40"
                      Cursor="Hand"
                      Margin="0,0,20,0">
                    <Image Source="Image/white_notification_icon.png"
                           Width="24"
                           Height="24"/>
                    <Border Background="Red"
                            Width="20"
                            Height="20"
                            CornerRadius="10"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Top">
                        <TextBlock x:Name="LowQuantityCount"
                                   Text="{Binding NotificationCount}"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center"
                                   Foreground="White"
                                   FontSize="12"
                                   FontWeight="Bold"/>
                    </Border>
                </Grid>

                <!-- Кнопки -->
                <Button Grid.Column="2"
                        Content="Назад" 
                        Style="{StaticResource ModernButton}"
                        Margin="0,0,15,0"
                        Click="BackButton_Click"/>

                <Button Grid.Column="3"
                        Content="Выход" 
                        Style="{StaticResource ModernButton}"
                        Click="ExitButton_Click"/>
            </Grid>
        </Border>

        <!-- Основное содержимое -->
        <Grid Grid.Row="1" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Панель фильтров и поиска -->
            <Border Grid.Row="0"
                    Background="White"
                    BorderBrush="#FFE0E0E0"
                    BorderThickness="1"
                    CornerRadius="5"
                    Padding="10"
                    Margin="0,0,0,10">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <Label Content="Фильтр:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                        <ComboBox x:Name="StatusFilterComboBox" Width="150" Margin="0,0,10,0"
                                  SelectionChanged="FilterChanged">
                            <ComboBoxItem Content="Все статусы" IsSelected="True"/>
                            <ComboBoxItem Content="Новый"/>
                            <ComboBoxItem Content="В обработке"/>
                            <ComboBoxItem Content="Доставка"/>
                            <ComboBoxItem Content="Завершен"/>
                            <ComboBoxItem Content="Отменен"/>
                        </ComboBox>
                    </StackPanel>

                    <TextBox Grid.Column="1" 
                             x:Name="SearchTextBox" 
                             Margin="5,0" 
                             TextChanged="SearchTextChanged" 
                             VerticalContentAlignment="Center"/>

                    <StackPanel Grid.Column="2" 
                                Orientation="Horizontal" 
                                VerticalAlignment="Center"
                                Margin="10,0">
                        <Label Content="Сортировка:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                        <ComboBox x:Name="SortComboBox" Width="180" 
                                  SelectionChanged="SortChanged">
                            <ComboBoxItem Content="По дате доставки (сначала ранние)"/>
                            <ComboBoxItem Content="По дате доставки (сначала поздние)"/>
                            <ComboBoxItem Content="По дате создания (сначала ранние)"/>
                            <ComboBoxItem Content="По дате создания (сначала поздние)"/>
                            <ComboBoxItem Content="По сумме (↑)"/>
                            <ComboBoxItem Content="По сумме (↓)"/>
                        </ComboBox>
                    </StackPanel>

                    <Button Grid.Column="3" 
                            Content="Обновить" 
                            Style="{StaticResource ModernButton}"
                            Click="RefreshButton_Click"/>
                </Grid>
            </Border>

            <!-- Список заказов -->
            <ListView Grid.Row="1" 
                      x:Name="OrdersListView"
                      SelectionChanged="ViewSelectedOrder_Click">
                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Setter Property="Margin" Value="0,0,0,10"/>
                        <Setter Property="Padding" Value="0"/>
                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                    </Style>
                </ListView.ItemContainerStyle>

                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Border Background="White" 
                                CornerRadius="5"
                                Padding="15">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <!-- Дата создания, сумма, количество -->
                                    <RowDefinition Height="Auto"/>
                                    <!-- Статус -->
                                    <RowDefinition Height="Auto"/>
                                    <!-- Клиент и телефон -->
                                    <RowDefinition Height="Auto"/>
                                    <!-- Дата доставки -->
                                    <RowDefinition Height="Auto"/>
                                    <!-- Адрес -->
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- Номер заказа -->
                                <TextBlock Grid.Row="0" Grid.Column="0"
                                           Text="{Binding OrderId, StringFormat='{}№{0}'}" 
                                           FontWeight="Bold" 
                                           FontSize="16"
                                           Margin="0,0,10,0"/>

                                <!-- Иконка уведомления -->
                                <Image Grid.Row="1" Grid.Column="0" 
                                       Source="Image/black_notification_icon.png"
                                       Width="20" Height="20"
                                       Margin="0,0,10,0"
                                       Visibility="{Binding IsNotification, Converter={StaticResource BoolToVisibilityConverter}}"/>

                                <!-- Первая строка: дата создания, сумма, количество -->
                                <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Horizontal">
                                    <TextBlock Text="{Binding CreateDate, StringFormat='{}Создан: {0:dd.MM.yyyy}'}"
                                               FontSize="14"
                                               Margin="0,0,15,0"/>

                                    <TextBlock Text="{Binding TotalPrice, StringFormat='{} (Сумма: {0:N2} руб.'}" 
                                               Margin="5,0,0,0"
                                               FontSize="14"/>
                                    
                                    <TextBlock Text="{Binding ItemsCount, StringFormat='{}, товаров: {0})'}" 
                                               Margin="2,0,0,0"
                                               FontSize="14"/>
                                </StackPanel>

                                <!-- Вторая строка: статус -->
                                <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Horizontal" Margin="0,5,0,0">
                                    <TextBlock Text="Статус: " FontSize="14"/>
                                    <TextBlock Text="{Binding Status}" Style="{StaticResource OrderStatusStyle}"/>
                                </StackPanel>

                                <!-- Третья строка: информация о клиенте -->
                                <StackPanel Grid.Row="2" Grid.Column="1" Orientation="Horizontal" Margin="0,5,0,0">
                                    <TextBlock Text="Клиент: " 
                                               FontSize="14"/>
                                    <TextBlock Text="{Binding CustomerName}" 
                                               FontSize="14"
                                               Margin="0,0,15,0"/>
                                    <TextBlock Text="{Binding CustomerPhone}" 
                                               FontSize="14"/>
                                </StackPanel>

                                <!-- Четвертая строка: дата доставки -->
                                <TextBlock Grid.Row="3" Grid.Column="1" 
                                           Text="{Binding DeliveryDate, StringFormat='{}Дата доставки: {0:dd.MM.yyyy}'}"
                                           FontSize="14"
                                           Margin="0,5,0,0"/>

                                <!-- Пятая строка: адрес -->
                                <StackPanel Grid.Row="4" Grid.Column="1" Orientation="Horizontal" Margin="0,5,0,0">
                                    <TextBlock Text="Адрес: " 
                                               FontSize="14"/>
                                    <TextBlock Text="{Binding DeliveryAddress}" 
                                               FontSize="14"
                                               TextWrapping="Wrap"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Grid>
    </Grid>
</Window>