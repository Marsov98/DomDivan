<Window x:Class="DomDivan.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DomDivan"
        mc:Ignorable="d"
        Title="Авторизация" 
        Height="450" 
        Width="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#FFF5F5F5">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <!-- Шапка -->
            <RowDefinition Height="*"/>
            <!-- Форма авторизации -->
        </Grid.RowDefinitions>

        <!-- Шапка (Header) -->
        <Border Grid.Row="0" Background="#FF1A1A1A" Padding="20,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Логотип и название -->
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <Image Source="/Image/logo.png" Width="40" Height="40" Margin="0,0,10,0"/>
                    <TextBlock Text="Авторизация" 
                             FontSize="20" 
                             FontWeight="Bold"
                             Foreground="White"
                             VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Форма авторизации -->
        <StackPanel Grid.Row="1" 
                    VerticalAlignment="Center" 
                    HorizontalAlignment="Center"
                    Width="300">

            <!-- Поле для логина -->
            <StackPanel Margin="0,0,0,15">
                <TextBlock Text="Логин" 
                           Margin="0,0,0,5"
                           FontSize="14"/>
                <TextBox x:Name="UsernameTextBox"
                         Style="{StaticResource ModernLoginTextBox}"/>
            </StackPanel>

            <!-- Поле для пароля -->
            <StackPanel Margin="0,0,0,25">
                <TextBlock Text="Пароль" 
                           Margin="0,0,0,5"
                           FontSize="14"/>
                <PasswordBox x:Name="PasswordBox"
                             Style="{StaticResource ModernPasswordTextBox}"/>
            </StackPanel>

            <!-- Кнопка "Войти" -->
            <Button Content="Войти"
                    Style="{StaticResource ModernButton}"
                    Width="120"
                    Height="40"
                    FontSize="16"
                    Margin="0,0,0,15"
                    Click="LoginButton_Click"/>

            <!-- Кнопка "Гость" -->
            <Button Content="Войти как гость"
                    Style="{StaticResource ModernButton}"
                    Width="150"
                    Height="35"
                    Background="Transparent"
                    Foreground="#FF1A1A1A"
                    BorderBrush="#FF1A1A1A"
                    BorderThickness="1"
                    Click="GuestButton_Click"/>
        </StackPanel>
    </Grid>
</Window>