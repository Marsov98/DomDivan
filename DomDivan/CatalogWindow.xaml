<Window x:Class="DomDivan.CatalogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DomDivan"
        mc:Ignorable="d"
        Title="Каталог" 
        Height="500" 
        Width="850"
        MinHeight="490"
        MinWidth="850"
        SizeChanged="Window_SizeChanged">
    <Window.Resources>
        <local:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>
        <local:DiscountToStrikethroughConverter x:Key="DiscountToStrikethroughConverter"/>
        <local:DiscountToGrayTextConverter x:Key="DiscountToGrayTextConverter"/>
        <Style TargetType="ListBoxItem">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                              VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                              Margin="{TemplateBinding Padding}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Блок фильтров -->
        <Border Grid.Column="0"
                BorderBrush="Gray" 
                BorderThickness="2" 
                Margin="5"
                Padding="10"
                Background="White"
                CornerRadius="5">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <!-- Логотип -->
                    <Image Source="/Image/logo.png" 
                       Height="40" 
                       Margin="0,0,0,10"
                       Stretch="Uniform"/>

                    <!-- Заголовок фильтров -->
                    <TextBlock Text="Фильтры" 
                           FontSize="20" 
                           Margin="0,0,0,10" 
                           FontWeight="Bold"/>


                    <!-- Сортировка -->
                    <ComboBox ItemsSource="{Binding SortOptions}"
                              SelectedItem="{Binding SelectedSortOption}"
                              Margin="0,0,0,10"
                              FontSize="14">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Name}"/>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>

                    <!-- Фильтр по типу товара -->
                    <Expander Header="Категория" 
                              IsExpanded="True">
                        <StackPanel>
                            <CheckBox Content="Диваны" 
                                      IsChecked="{Binding FilterSofa}"
                                      Margin="2"/>
                            <CheckBox Content="Кровати" 
                                      IsChecked="{Binding FilterBed}"
                                      Margin="2"/>
                            <CheckBox Content="Кресла" 
                                      IsChecked="{Binding FilterArmchair}"
                                      Margin="2"/>
                        </StackPanel>
                    </Expander>

                    <!-- Фильтр по цене -->
                    <Expander Header="Цена" 
                              IsExpanded="True" 
                              Margin="0,10,0,0">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <Grid Grid.Row="0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="27"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="28"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <Label Grid.Column="0"
                                       Content="От:"
                                       FontSize="13"/>

                                <Border Grid.Column="1"
                                        BorderBrush="Gray" 
                                        BorderThickness="2" 
                                        Background="White"
                                        CornerRadius="5"
                                        Height="25">
                                    <TextBox Width="70" 
                                             Height="25" 
                                             BorderThickness="0"
                                             Text="{Binding MinPrice, UpdateSourceTrigger=PropertyChanged}"/>
                                </Border>

                                <Label Grid.Column="2"
                                       Content="До:"
                                       FontSize="13"/>

                                <Border Grid.Column="3"
                                        BorderBrush="Gray" 
                                        BorderThickness="2" 
                                        Background="White"
                                        CornerRadius="5"
                                        Height="25">
                                    <TextBox Width="70" 
                                             Height="25" 
                                             BorderThickness="0"
                                             Text="{Binding MaxPrice, UpdateSourceTrigger=PropertyChanged}"/>
                                </Border>
                            </Grid>

                            <Slider Grid.Row="1"
                                    Minimum="{Binding MinViewPrice}"
                                    Maximum="{Binding MaxViewPrice}"
                                    Value="{Binding MaxPrice}"
                                    Margin="0,5,0,0"/>
                        </Grid>
                    </Expander>

                    <!-- Фильтр по цвету -->
                    <Expander Header="Цвет" 
                              IsExpanded="False" 
                              Margin="0,10,0,0">
                        <ItemsControl ItemsSource="{Binding Colors}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <CheckBox Content="{Binding Name}"
                                              IsChecked="{Binding IsSelected}"
                                              Margin="2"/>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </Expander>

                    <!-- Фильтр по материалу -->
                    <Expander Header="Материал" 
                              IsExpanded="False" 
                              Margin="0,10,0,0">
                        <ItemsControl ItemsSource="{Binding Cloths}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <CheckBox Content="{Binding Name}"
                                              IsChecked="{Binding IsSelected}"
                                              Margin="2"/>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </Expander>

                    <!-- Фильтр по наполнителю (не для кроватей) -->
                    <Expander x:Name="FillingExpander"
                              Header="Наполнитель" 
                              IsExpanded="False" 
                              Margin="0,10,0,0">
                        <ItemsControl ItemsSource="{Binding Fillings}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <CheckBox Content="{Binding Name}"
                                              IsChecked="{Binding IsSelected}"
                                              Margin="2"/>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </Expander>

                    <!-- Фильтр по механизму (только для диванов) -->
                    <Expander x:Name="MechanismExpander" 
                              Header="Механизм" 
                              IsExpanded="False" 
                              Margin="0,10,0,0">
                        <ItemsControl ItemsSource="{Binding Mechanisms}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <CheckBox Content="{Binding Name}"
                                              IsChecked="{Binding IsSelected}"
                                              Margin="2"/>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </Expander>
                </StackPanel>
            </ScrollViewer>
        </Border>

        <!-- Поисковая строка, избранное и корзина -->
        <Grid Grid.Column="1" 
              Margin="5,0,5,5">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Поисковая строка и иконки -->
            <Border Grid.Row="0"
                Background="White"
                BorderBrush="Gray"
                BorderThickness="1"
                CornerRadius="5"
                Padding="5"
                Margin="0,0,0,10">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Поисковая строка -->
                    <TextBox Grid.Column="0"
                             VerticalAlignment="Center"
                             BorderThickness="0"
                             x:Name="searchBox"
                             Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"/>

                    <!-- Иконка "Корзина" с количеством товаров -->
                    <Grid Grid.Column="1"
                          VerticalAlignment="Center"
                          Width="35"
                          Height="35">
                        <Image Source="/Image/cart_icon.png" 
                               Width="24"
                               Height="24"/>
                        <Border Background="Red"
                                Width="20"
                                Height="20"
                                CornerRadius="10"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Top"
                                Margin="0,15,-3,0"
                                RenderTransformOrigin="0.154,1.136">
                            <TextBlock x:Name="CartCount"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Center"
                                       Foreground="White"
                                       FontSize="12"
                                       FontWeight="Bold"/>
                        </Border>
                    </Grid>
                </Grid>
            </Border>

            <!-- Список товаров -->
            <ListBox Grid.Row="1"
                     x:Name="ListItems"
                     HorizontalContentAlignment="Stretch"
                     VerticalAlignment="Top">
                <ListBox.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid Columns="{Binding ColumnCount}" />
                    </ItemsPanelTemplate>
                </ListBox.ItemsPanel>

                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Border Margin="10" 
                                Padding="10" 
                                BorderBrush="#ddd" 
                                BorderThickness="1">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="200"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <Grid Grid.Row="1">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>

                                    <TextBlock Text="{Binding FullName}" 
                                               FontWeight="Bold" 
                                               HorizontalAlignment="Center"/>

                                    <!-- Блок цены -->
                                    <StackPanel Grid.Row="1" 
                                                HorizontalAlignment="Center"
                                                Orientation="Horizontal">
                                        <!-- Блок для случая без скидки -->
                                        <TextBlock Text="{Binding Price, StringFormat='{} {0:N2} руб.'}"
                                                   FontWeight="Bold"
                                                   Visibility="{Binding Discount, 
                                                                Converter={StaticResource NullToVisibilityConverter}, 
                                                                ConverterParameter=invert}"/>

                                        <!-- Блок для случая со скидкой -->
                                        <StackPanel Orientation="Horizontal"
                                                    Visibility="{Binding Discount, 
                                                                 Converter={StaticResource NullToVisibilityConverter}}">
                                            <!-- Цена без скидки (перечеркнутая) -->
                                            <TextBlock Text="{Binding Price, StringFormat='{} {0:N2}'}"
                                                       TextDecorations="{Binding Discount, 
                                                                         Converter={StaticResource DiscountToStrikethroughConverter}}"
                                                       Foreground="{Binding Discount, 
                                                                    Converter={StaticResource DiscountToGrayTextConverter}}"
                                                       Margin="0,0,5,0"/>

                                            <!-- Скидка -->
                                            <TextBlock Text="{Binding Discount, 
                                                              StringFormat='{} {0}%'}"
                                                       Foreground="Red"
                                                       FontWeight="Bold"/>

                                            <!-- Цена со скидкой -->
                                            <TextBlock Text="{Binding DiscountPrice, 
                                                              StringFormat='{} {0:N2} руб.'}"
                                                       FontWeight="Bold"
                                                       Margin="5,0,0,0"/>
                                        </StackPanel>
                                    </StackPanel>

                                    <TextBlock Grid.Row="2"
                                               Text="{Binding Description}"
                                               HorizontalAlignment="Center"/>

                                    <Button Content="Добавить в корзину"
                                            Grid.Row="3"
                                            HorizontalAlignment="Center"
                                            Margin="5"/>
                                </Grid>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Grid>
    </Grid>
</Window>
