<Window x:Class="DomDivan.CatalogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DomDivan"
        mc:Ignorable="d"
        Title="Каталог товаров" 
        Height="600" 
        Width="900"
        MinHeight="600"
        MinWidth="900"
        WindowStartupLocation="CenterScreen"
        Background="#FFF5F5F5"
        SizeChanged="Window_SizeChanged">
    <Window.Resources>
        <!-- Стиль для текстовых полей -->
        <Style TargetType="TextBox">
            <Setter Property="BorderBrush" Value="#FFE0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Height" Value="30"/>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <!-- Шапка -->
            <RowDefinition Height="*"/>
            <!-- Основное содержимое -->
        </Grid.RowDefinitions>

        <!-- Шапка (Header) -->
        <Border Grid.Row="0" Background="#FF1A1A1A" Padding="20,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Логотип и название -->
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <Image Source="/Image/logo.png" Width="40" Height="40" Margin="0,0,10,0"/>
                    <TextBlock Text="Каталог товаров" 
                             FontSize="20" 
                             FontWeight="Bold"
                             Foreground="White"
                             VerticalAlignment="Center"/>
                </StackPanel>

                <!-- Кнопка "Выход" -->
                <Button x:Name="ExitButton" 
                        Grid.Column="2"
                        Content="Выход" 
                        Style="{StaticResource ModernButton}"
                        Click="ExitButton_Click"/>
            </Grid>
        </Border>

        <!-- Основное содержимое -->
        <Grid Grid.Row="1" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Блок фильтров -->
            <Border Grid.Column="0"
                    BorderBrush="#FFE0E0E0" 
                    BorderThickness="1" 
                    Background="White"
                    CornerRadius="5">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="10">
                        <!-- Заголовок фильтров -->
                        <TextBlock Text="Фильтры" 
                               FontSize="18" 
                               Margin="0,0,0,10" 
                               FontWeight="Bold"/>

                        <!-- Сортировка -->
                        <ComboBox ItemsSource="{Binding SortOptions}"
                                  SelectedItem="{Binding SelectedSortOption}"
                                  Margin="0,0,0,10"
                                  FontSize="14">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Name}"/>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>

                        <!-- Фильтр по типу товара -->
                        <Expander Header="Категория" IsExpanded="True">
                            <StackPanel>
                                <CheckBox Content="Диваны" 
                                          IsChecked="{Binding FilterSofa}"
                                          Margin="2"/>
                                <CheckBox Content="Кровати" 
                                          IsChecked="{Binding FilterBed}"
                                          Margin="2"/>
                                <CheckBox Content="Кресла" 
                                          IsChecked="{Binding FilterArmchair}"
                                          Margin="2"/>
                            </StackPanel>
                        </Expander>

                        <!-- Фильтр по цене -->
                        <Expander Header="Цена" IsExpanded="True" Margin="0,10,0,0">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <Grid Grid.Row="0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="27"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="28"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <Label Grid.Column="0" Content="От:" FontSize="13"/>
                                    <Border Grid.Column="1"
                                            BorderBrush="#FFE0E0E0" 
                                            BorderThickness="1" 
                                            Background="White"
                                            CornerRadius="3"
                                            Height="25">
                                        <TextBox Width="70" 
                                                 Height="25" 
                                                 BorderThickness="0"
                                                 Text="{Binding MinPrice, UpdateSourceTrigger=PropertyChanged}"/>
                                    </Border>

                                    <Label Grid.Column="2" Content="До:" FontSize="13"/>
                                    <Border Grid.Column="3"
                                            BorderBrush="#FFE0E0E0" 
                                            BorderThickness="1" 
                                            Background="White"
                                            CornerRadius="3"
                                            Height="25">
                                        <TextBox Width="70" 
                                                 Height="25" 
                                                 BorderThickness="0"
                                                 Text="{Binding MaxPrice, UpdateSourceTrigger=PropertyChanged}"/>
                                    </Border>
                                </Grid>

                                <Slider Grid.Row="1"
                                        Minimum="{Binding MinViewPrice}"
                                        Maximum="{Binding MaxViewPrice}"
                                        Value="{Binding MaxPrice}"
                                        Margin="0,5,0,0"/>
                            </Grid>
                        </Expander>

                        <!-- Остальные фильтры (цвет, материал и т.д.) -->
                        <Expander Header="Цвет" IsExpanded="False" Margin="0,10,0,0">
                            <ItemsControl ItemsSource="{Binding Colors}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <CheckBox Content="{Binding Name}"
                                                  IsChecked="{Binding IsSelected}"
                                                  Margin="2"/>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </Expander>

                        <Expander Header="Материал" IsExpanded="False" Margin="0,10,0,0">
                            <ItemsControl ItemsSource="{Binding Cloths}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <CheckBox Content="{Binding Name}"
                                                  IsChecked="{Binding IsSelected}"
                                                  Margin="2"/>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </Expander>

                        <Expander x:Name="FillingExpander"
                                  Header="Наполнитель" 
                                  IsExpanded="False" 
                                  Margin="0,10,0,0">
                            <ItemsControl ItemsSource="{Binding Fillings}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <CheckBox Content="{Binding Name}"
                                                  IsChecked="{Binding IsSelected}"
                                                  Margin="2"/>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </Expander>

                        <Expander x:Name="MechanismExpander" 
                                  Header="Механизм" 
                                  IsExpanded="False" 
                                  Margin="0,10,0,0">
                            <ItemsControl ItemsSource="{Binding Mechanisms}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <CheckBox Content="{Binding Name}"
                                                  IsChecked="{Binding IsSelected}"
                                                  Margin="2"/>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </Expander>

                        <Expander x:Name="SofaTypesExpander" 
                                  Header="Типы диванов" 
                                  IsExpanded="False" 
                                  Margin="0,10,0,0">
                            <ItemsControl ItemsSource="{Binding SofaTypes}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <CheckBox Content="{Binding Name}"
                                                  IsChecked="{Binding IsSelected}"
                                                  Margin="2"/>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </Expander>
                    </StackPanel>
                </ScrollViewer>
            </Border>

            <!-- Правая часть с товарами -->
            <Grid Grid.Column="1" Margin="10,0,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Поисковая строка и корзина -->
                <Border Grid.Row="0"
                        Background="White"
                        BorderBrush="#FFE0E0E0"
                        BorderThickness="1"
                        CornerRadius="5"
                        Padding="10"
                        Margin="0,0,0,10">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBox Grid.Column="0"
                                 VerticalAlignment="Center"
                                 BorderThickness="0"
                                 x:Name="searchBox"
                                 Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                                 FontSize="14"
                                 Padding="5"/>

                        <!-- Иконка "Корзина" с количеством товаров -->
                        <Grid Grid.Column="1"
                          VerticalAlignment="Center"
                          Width="35"
                          Height="35"
                          Cursor="Hand"
                          MouseDown="GridIcon_MouseDown">
                            <Image Source="/Image/cart_icon.png" 
                               Width="24"
                               Height="24"/>
                            <Border Background="Red"
                                Width="20"
                                Height="20"
                                CornerRadius="10"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Top"
                                Margin="0,15,-3,0"
                                RenderTransformOrigin="0.154,1.136">
                                <TextBlock x:Name="CartCount"
                                       Text="{Binding ItemsCount, Source={x:Static local:CartService.Instance}}"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Center"
                                       Foreground="White"
                                       FontSize="12"
                                       FontWeight="Bold"/>
                            </Border>
                        </Grid>
                    </Grid>
                </Border>

                <!-- Список товаров -->
                <ListBox Grid.Row="1"
                         x:Name="ListItems"
                         HorizontalContentAlignment="Stretch"
                         VerticalAlignment="Top"
                         Background="White"
                         BorderBrush="#FFE0E0E0"
                         BorderThickness="1"
                         SelectionChanged="ViewSelected_Click">
                    <ListBox.ItemsPanel>
                        <ItemsPanelTemplate>
                            <UniformGrid Columns="{Binding ColumnCount}" />
                        </ItemsPanelTemplate>
                    </ListBox.ItemsPanel>

                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Border Margin="10" 
                                    Padding="10" 
                                    BorderBrush="#FFE0E0E0" 
                                    BorderThickness="1"
                                    Background="White"
                                    CornerRadius="5">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="200"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>

                                    <!-- Изображение товара -->
                                    <Image Grid.Row="0" 
                                           Source="{Binding Photo}" 
                                           Stretch="Uniform"
                                           MaxHeight="200"
                                           MaxWidth="250"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"/>

                                    <Grid Grid.Row="1">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="*"/>
                                        </Grid.RowDefinitions>

                                        <TextBlock Text="{Binding FullName}" 
                                                   FontWeight="Bold" 
                                                   HorizontalAlignment="Center"
                                                   TextWrapping="Wrap"
                                                   Margin="0,5"/>

                                        <!-- Блок цены -->
                                        <StackPanel Grid.Row="1" 
                                                    HorizontalAlignment="Center"
                                                    Orientation="Horizontal"
                                                    Margin="0,5">
                                            <!-- Без скидки -->
                                            <TextBlock Text="{Binding Price, StringFormat='{} {0:N2} руб.'}"
                                                       FontWeight="Bold"
                                                       Visibility="{Binding Discount, 
                                                                    Converter={StaticResource NullToVisibilityConverter}, 
                                                                    ConverterParameter=invert}"/>

                                            <!-- Со скидкой -->
                                            <StackPanel Orientation="Horizontal"
                                                        Visibility="{Binding Discount, 
                                                                     Converter={StaticResource NullToVisibilityConverter}}">
                                                <TextBlock Text="{Binding Price, StringFormat='{} {0:N2}'}"
                                                           TextDecorations="{Binding Discount, 
                                                                             Converter={StaticResource DiscountToStrikethroughConverter}}"
                                                           Foreground="{Binding Discount, 
                                                                        Converter={StaticResource DiscountToGrayTextConverter}}"
                                                           Margin="0,0,5,0"/>

                                                <TextBlock Text="{Binding Discount, 
                                                                  StringFormat='{} {0}%'}"
                                                           Foreground="Red"
                                                           FontWeight="Bold"/>

                                                <TextBlock Text="{Binding DiscountPrice, 
                                                                  StringFormat='{} {0:N2} руб.'}"
                                                           FontWeight="Bold"
                                                           Margin="5,0,0,0"/>
                                            </StackPanel>
                                        </StackPanel>

                                        <TextBlock Grid.Row="2"
                                                   Text="{Binding Description}"
                                                   HorizontalAlignment="Center"
                                                   TextAlignment="Center"
                                                   TextWrapping="Wrap"
                                                   Margin="0,5"/>

                                        <!-- Кнопки корзины -->
                                        <Grid Grid.Row="3" Margin="0,10,0,0">
                                            <!-- Блок "Нет в наличии" -->
                                            <Border Background="#FFF0F0F0"
                                                    CornerRadius="4"
                                                    HorizontalAlignment="Center"
                                                    VerticalAlignment="Center"
                                                    Padding="12,8"
                                                    Visibility="{Binding OutOfStock, Converter={StaticResource BoolToVisibilityConverter}}">
                                                <TextBlock Text="Нет в наличии"
                                                           Foreground="#FF606060"
                                                           FontWeight="SemiBold"/>
                                            </Border>

                                            <Grid Visibility="{Binding OutOfStock, Converter={StaticResource InverseBoolToVisibilityConverter}}">
                                                <!-- Добавить в корзину -->
                                                <Button x:Name="AddToCartButton"
                                                    Content="Добавить в корзину"
                                                    Style="{StaticResource ModernButton}"
                                                    HorizontalAlignment="Center"
                                                    Click="AddToCart_Click"
                                                    Visibility="{Binding IsInCart, Converter={StaticResource InverseBoolToVisibilityConverter}}"/>
                                            </Grid>
                                            <!-- Управление количеством -->
                                            <StackPanel Orientation="Horizontal"
                                                        HorizontalAlignment="Center"
                                                        VerticalAlignment="Center"
                                                        Visibility="{Binding IsInCart, Converter={StaticResource BoolToVisibilityConverter}}">
                                                <Button Content="-"
                                                        Style="{StaticResource ModernButton}"
                                                        Width="30"
                                                        Click="DecreaseQuantity_Click"
                                                        Tag="{Binding Id}"/>

                                                <TextBlock Text="{Binding CartQuantity}"
                                                           Width="40"
                                                           TextAlignment="Center"
                                                           VerticalAlignment="Center"/>

                                                <Button Content="+"
                                                        Style="{StaticResource ModernButton}"
                                                        Width="30"
                                                        Click="IncreaseQuantity_Click"
                                                        Tag="{Binding Id}"
                                                        Visibility="{Binding IsMaxQuantity, Converter={StaticResource InverseBoolToVisibilityConverter}}"/>
                                            </StackPanel>
                                        </Grid>
                                    </Grid>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Grid>
        </Grid>
    </Grid>
</Window>