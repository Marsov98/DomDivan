<Window x:Class="DomDivan.OrdersDetailsViewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DomDivan"
        mc:Ignorable="d"
        Title="Детали заказа" 
        Height="600" Width="800"
        WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <Style x:Key="OrderStatusStyle" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="Bold"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding Status}" Value="Новый">
                    <Setter Property="Foreground" Value="Blue"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Status}" Value="В обработке">
                    <Setter Property="Foreground" Value="Orange"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Status}" Value="Доставка">
                    <Setter Property="Foreground" Value="Green"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Status}" Value="Отменен">
                    <Setter Property="Foreground" Value="Red"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Status}" Value="Завершен">
                    <Setter Property="Foreground" Value="DarkGreen"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Информация о заказе -->
        <StackPanel Grid.Row="0" Orientation="Horizontal">
            <TextBlock Text="Заказ №" FontWeight="Bold"/>
            <TextBlock Text="{Binding OrderId}" FontWeight="Bold" Margin="5,0,20,0"/>
            <TextBlock Text="Статус:" Margin="10,0,5,0"/>
            <TextBlock Text="{Binding Status}" Style="{StaticResource OrderStatusStyle}"/>
        </StackPanel>

        <!-- Информация о клиенте -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,10">
            <TextBlock Text="Клиент:" FontWeight="Bold"/>
            <TextBlock Text="{Binding CustomerName}" Margin="5,0,20,0"/>
            <TextBlock Text="Телефон:" FontWeight="Bold"/>
            <TextBlock Text="{Binding CustomerPhone}" Margin="5,0,0,0"/>
        </StackPanel>

        <!-- Адрес и время доставки -->
        <StackPanel Grid.Row="2" Margin="0,10">
            <TextBlock Text="Адрес доставки:" FontWeight="Bold"/>
            <TextBlock Text="{Binding DeliveryAddress}" Margin="0,5"/>
            <TextBlock Text="Время доставки:" FontWeight="Bold" Margin="0,10,0,0"/>
            <DatePicker SelectedDate="{Binding DeliveryTime}" Margin="0,5" Width="200" HorizontalAlignment="Left"/>
        </StackPanel>

        <!-- Список товаров -->
        <GroupBox Grid.Row="3" Header="Товары в заказе" Margin="0,10">
            <ListView x:Name="ItemsListView">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Наименование" DisplayMemberBinding="{Binding ProductTitle}" Width="200"/>
                        <GridViewColumn Header="Вариация" DisplayMemberBinding="{Binding VariantTitle}" Width="200"/>
                        <GridViewColumn Header="Цена" DisplayMemberBinding="{Binding UnitPrice, StringFormat={}{0:C}}" Width="100"/>
                        <GridViewColumn Header="Количество" DisplayMemberBinding="{Binding Quantity}" Width="80"/>
                        <GridViewColumn Header="Сумма" DisplayMemberBinding="{Binding TotalPrice, StringFormat={}{0:C}}" Width="100"/>
                    </GridView>
                </ListView.View>
            </ListView>
        </GroupBox>

        <!-- Панель управления -->
        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10">
            <ComboBox x:Name="StatusComboBox" Width="150" Margin="0,0,10,0"
                      SelectedValue="{Binding Status}"
                      SelectedValuePath="Content"
                      DisplayMemberPath="Content">
                <ComboBoxItem Content="Новый"/>
                <ComboBoxItem Content="В обработке"/>
                <ComboBoxItem Content="Доставка"/>
                <ComboBoxItem Content="Завершен"/>
                <ComboBoxItem Content="Отменен"/>
            </ComboBox>
            <Button Content="Сохранить" Width="100" Padding="10,5" Click="SaveButton_Click"/>
            <Button Content="Закрыть" Width="100" Padding="10,5" Margin="10,0,0,0" Click="CloseButton_Click"/>
        </StackPanel>
    </Grid>
</Window>