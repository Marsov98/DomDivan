<Window x:Class="DomDivan.LowStockNotificationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DomDivan"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        Title="Товары с малым запасом" 
        Height="600" Width="800"
        WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <!-- Конвертер для подсветки низкого количества -->
        <Style x:Key="LowStockStyle" TargetType="TextBlock">
            <Style.Triggers>
                <Trigger Property="Text" Value="0">
                    <Setter Property="Foreground" Value="Red"/>
                    <Setter Property="FontWeight" Value="Bold"/>
                </Trigger>
                <DataTrigger Binding="{Binding StockQuantity}" Value="{x:Static sys:Int32.MaxValue}">
                    <Setter Property="Foreground" Value="Orange"/>
                    <Setter Property="FontWeight" Value="Bold"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock Grid.Row="0" Text="Товары с количеством менее 5 на складе" 
                   FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>

        <!-- Список товаров -->
        <ListView Grid.Row="1" x:Name="LowStockListView" SelectionMode="Single">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Expander Margin="0,5">
                        <Expander.Header>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="{Binding ProductTitle}" Width="200" Margin="5" FontWeight="Bold"/>
                                <TextBlock Text="{Binding VariantTitle}" Width="200" Margin="5"/>
                                <TextBlock Text="{Binding StockQuantity}" Width="80" Margin="5" 
                                           Foreground="Red" FontWeight="Bold"/>
                            </StackPanel>
                        </Expander.Header>

                        <StackPanel Margin="10,5">
                            <TextBlock Text="Последние поставщики:" FontWeight="Bold" Margin="0,0,0,5"/>

                            <ItemsControl ItemsSource="{Binding SupplierShortLastInfos}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border BorderBrush="LightGray" BorderThickness="0,0,0,1" Padding="0,0,0,5" Margin="0,0,0,5">
                                            <StackPanel>
                                                <TextBlock>
                                                    <Run Text="{Binding CompanyName}" FontWeight="Bold"/>
                                                    <Run Text=" ("/>
                                                    <Run Text="{Binding ContactPerson}"/>
                                                    <Run Text=", "/>
                                                    <Run Text="{Binding PhoneNumber}"/>
                                                    <Run Text=")"/>
                                                </TextBlock>
                                                <TextBlock Text="{Binding LastPrice, StringFormat='Последняя цена: {0:C}'}" 
                                                           Margin="10,2,0,0"/>
                                            </StackPanel>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </Expander>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Window>